<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Profile</title>

  <style>
    * {
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    
    body {
      margin: 0;
      background: #ffffff;
      color: #333;
    }
       /* Navbar */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 60px;
      background: #fff;
    }

    .navbar .logo {
      font-size: 40px;
      font-weight: 37;
      color: #B2A9A1;
    }

    .navbar ul {
      display: flex;
      list-style: none;
      gap: 25px;
    }

    .navbar a {
      text-decoration: none;
      color: #615A5A;
      font-size: 15px;
    }

    .navbar .btn {
      padding: 8px 15px;
      border-radius: 5px;
      background: #484848;
      color: #fff;
    }
    footer {
      margin-top: 40px;
      background: #f6f6f6;
      padding: 40px 60px;
      color: #666;
    }
     .footer .logo {
      font-size: 60px;
      font-weight: 37;
      color: #B2A9A1;
    }
    .footer-top {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    .footer-top h4 {
      margin-bottom: 10px;
      color: #333;
    }

    .footer-top input {
      padding: 8px;
      width: 200px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .footer-bottom {
      text-align: center;
      margin-top: 20px;
      font-size: 12px;
    }
    /* ===== LAYOUT ===== */
    .profile-wrapper {
      display: flex;
      padding: 40px 60px;
      gap: 40px;
    }

    /* ===== SIDEBAR ===== */
    .sidebar {
      width: 260px;
      border: 1px solid #ddd;
    }

    .sidebar-header {
      background: #5a5553;
      color: #fff;
      padding: 18px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .avatar-small {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: #d9d9d9;
    }

    .sidebar-menu {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .sidebar-menu li {
      border-top: 1px solid #ddd;
    }

    .sidebar-menu a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 14px 18px;
      text-decoration: none;
      color: #333;
      font-size: 14px;
    }

    .sidebar-menu a.active,
    .sidebar-menu a:hover {
      background: #f3f3f3;
      font-weight: 600;
    }

    /* ===== PROFILE CARD ===== */
    .profile-card {
      flex: 1;
      background: #fff;
      border-radius: 12px;
      padding: 40px;
      box-shadow: 0 12px 30px rgba(0,0,0,0.2);
      position: relative;
    }

    .profile-title {
      text-align: center;
      font-size: 28px;
      letter-spacing: 2px;
      margin-bottom: 35px;
      border-bottom: 1px solid #aaa;
      padding-bottom: 10px;
    }

    /* ===== CONTENT ===== */
    .profile-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 25px;
    }

    .avatar-large {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: #e5e3df;
      margin-bottom: 20px;
    }

    .field-group {
      display: flex;
      align-items: center;
      gap: 16px;
      width: 100%;
      max-width: 480px;
    }

    .field-group label {
      width: 90px;
      text-align: right;
      font-weight: 600;
    }

    .field-input {
      flex: 1;
      background: #d9d9d9;
      border-radius: 6px;
      padding: 10px 14px;
      font-size: 14px;
      border: none;
      outline: none;
    }

    .edit-icon {
      cursor: pointer;
      font-size: 16px;
      color: #333;
    }

    .change-password-btn {
      margin-top: 15px;
      background: #5a5553;
      color: #fff;
      border: none;
      padding: 10px 24px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
    }

    .save-btn {
      position: absolute;
      bottom: 30px;
      right: 40px;
      background: #5a5553;
      color: #fff;
      border: none;
      padding: 10px 22px;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
    }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 900px) {
      .profile-wrapper {
        flex-direction: column;
        padding: 20px;
      }

      .sidebar {
        width: 100%;
      }

      .profile-card {
        padding: 25px;
      }

      .save-btn {
        position: static;
        margin-top: 30px;
        align-self: center;
      }
    }
  </style>
</head>

<body>
 <%- include('../partials/user/loggedinHeader') %>
<div class="profile-wrapper">

  <!-- ===== SIDEBAR ===== -->
  <aside class="sidebar">
    <div class="sidebar-header">
      <div class="avatar-small"></div>
      <strong><%= user?.name || 'User' %></strong>
    </div>

    <ul class="sidebar-menu">
      <li><a href="/profile">Profile</a></li>
      <li><a href="#">Coupon</a></li>
      <li><a href="#">Referral Code</a></li>
      <li><a href="#">My Orders</a></li>
      <li><a href="#">Wallet</a></li>
      <li><a href="#">Address</a></li>
      <li><a href="#">Delete Account</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </aside>

  <!-- ===== EDIT PROFILE CARD ===== -->
  <section class="profile-card">

    <h2 class="profile-title">PROFILE</h2>

    <form method="POST" action="/profile/edit" class="profile-content" enctype="multipart/form-data">

 <% if (user?.profileImage) { %>
<div style="position: relative;">
  <img
    src="<%= user.profileImage %>"
    alt="Profile Image"
    class="avatar-large"
    style="object-fit: cover;"
  />
  <span
    onclick="deleteProfileImage()"
    style="
      position: absolute;
      top: 5px;
      right: 5px;
      background: #000;
      color: #fff;
      width: 22px;
      height: 22px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      cursor: pointer;
    "
    title="Delete profile photo"
  >
    ✕
  </span>
</div>

<% } else { %>
  <div class="avatar-large"></div>
<% } %>
<input
  type="file"
  name="profileImage"
  accept="image/png, image/jpeg"
  style="margin-bottom: 10px;"
/>



      <div class="field-group">
        <label>Name:</label>
        <input
          type="text"
          name="name"
          class="field-input"
          value="<%= user?.name || '' %>"
        />
        <span class="edit-icon">✎</span>
      </div>

      <div class="field-group">
        <label>Email:</label>
        <input
          type="email"
          name="email"
          class="field-input"
          value="<%= user?.email || '' %>"
        />
        <span class="edit-icon">✎</span>
      </div>

      <div class="field-group">
        <label>Phone:</label>
        <input
          type="text"
          name="mobileNumber"
          class="field-input"
          value="<%= user?.mobileNumber || '' %>"
        />
        <span class="edit-icon">✎</span>
      </div>

      <button
        type="button"
        class="change-password-btn"
        onclick="location.href='/profile/change-password'"
      >
        Change password
      </button>

      <button type="submit" class="save-btn">
        Save changes
      </button>

    </form>

  </section>

</div>
<%- include('../partials/user/footer') %>
</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (typeof updatedFields !== 'undefined' && updatedFields.length) { %>
<script>
  const fields = <%- JSON.stringify(updatedFields) %>;

  let text = '';
  if (fields.length === 1) {
    text = `${fields[0]} updated successfully`;
  } else if (fields.length === 2) {
    text = `${fields[0]} and ${fields[1]} updated successfully`;
  } else {
    text = `${fields.join(', ')} updated successfully`;
  }

  Swal.fire({
    icon: 'success',
    title: 'Profile Updated',
    text,
    confirmButtonColor: '#4a4745'
  }).then(() => {
    window.location.href = '/profile';
  });
</script>
<% } %>
<% if (typeof message !== 'undefined' && message) { %>
<script>
  Swal.fire({
    icon: 'error',
    title: 'Email Not Available',
    text: '<%= message %>',
    confirmButtonColor: '#4a4745'
  });
</script>
<% } %>
<script>
  function deleteProfileImage() {
    Swal.fire({
      title: 'Delete profile photo?',
      text: 'This action cannot be undone',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#5a5553',
      cancelButtonColor: '#aaa',
      confirmButtonText: 'Yes, delete'
    }).then(async (result) => {
      if (!result.isConfirmed) return;

      const res = await fetch('/profile/delete-image', {
        method: 'DELETE'
      });

      const data = await res.json();

      if (data.success) {
        Swal.fire({
          icon: 'success',
          title: 'Deleted',
          text: 'Profile photo removed'
        }).then(() => {
          location.reload();
        });
      } else {
        Swal.fire('Error', 'Unable to delete image', 'error');
      }
    });
  }
</script>

</html>
