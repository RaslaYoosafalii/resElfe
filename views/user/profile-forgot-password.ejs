<!DOCTYPE html>
<html>
<head>
  <title>Verify Email</title>
  <style>
    body{font-family:Arial;background:#f4f4f4}
    .card{max-width:420px;margin:80px auto;background:#fff;padding:40px;border-radius:8px;box-shadow:0 10px 30px rgba(0,0,0,.15)}
    input,button{width:100%;padding:12px;margin-top:15px}
    button{background:#4a4745;color:#fff;border:none;border-radius:5px}
  </style>
</head>
<body>

<div class="card">
  <h2 style="text-align:center">Verify Your Email</h2>

  <form method="POST" action="/profile/forgot-password">
    <input type="email" name="email" placeholder="Registered email" required />
    <button type="submit">Send OTP</button>
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (typeof message !== 'undefined' && message) { %>
<script>
  Swal.fire({
    icon:'error',
    text:"<%= message %>",
    confirmButtonColor:'#4a4745'
  })
</script>
<% } %>

</body>
</html>
