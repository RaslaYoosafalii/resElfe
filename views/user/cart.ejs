<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Your Cart</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
* {
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

body {
  margin: 0;
  background: #fff;
  color: #333;
}

.container {
  max-width: 1200px;
  margin: 40px auto;
  padding: 0 20px;
}

.cart-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 25px;
}
.btn-continue {
  padding: 12px 22px;
  background: rgb(45, 42, 42);
  color: white;
  border: none;
  margin-top: 25px;
  border-radius: 20px;
  font-size: medium;
  cursor: pointer;
}

/* CART TABLE */
.cart-table {
  width: 100%;
  border-collapse: collapse;
}

.cart-table th {
  text-align: left;
  padding: 12px;
  background: #f5f5f5;
  font-size: 14px;
}

.cart-table td {
  padding: 18px 12px;
  border-bottom: 1px solid #eee;
  vertical-align: middle;
}

.cart-product {
  display: flex;
  gap: 15px;
  align-items: center;
}

.cart-product img {
  width: 90px;
  height: 110px;
  object-fit: cover;
  border-radius: 6px;
}

.cart-product h4 {
  margin: 0 0 6px;
  font-size: 15px;
}

.cart-product p {
  margin: 2px 0;
  font-size: 13px;
  color: #666;
}

/* QUANTITY */
.qty-wrap {
  display: flex;
  align-items: center;
  gap: 10px;
}

.qty-btn {
  width: 32px;
  height: 32px;
  border: 1px solid #ccc;
  background: #fff;
  cursor: pointer;
  font-size: 18px;
}

.qty-btn:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.qty-count {
  min-width: 24px;
  text-align: center;
}

/* PRICE */
.price {
  font-weight: bold;
}

/* REMOVE */
.remove-btn {
  background: none;
  border: none;
  color: #c00;
  cursor: pointer;
  font-size: 13px;
}

/* OUT OF STOCK */
.out-of-stock {
  opacity: 0.45;
}

.stock-warning {
  font-size: 12px;
  color: #c00;
  margin-top: 4px;
}

/* SUMMARY */
.cart-summary {
  margin-top: 40px;
  display: flex;
  justify-content: flex-end;
}

.summary-box {
  width: 320px;
  border: 1px solid #ddd;
  padding: 20px;
  border-radius: 8px;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}

.checkout-btn {
  margin-top: 15px;
  width: 100%;
  padding: 14px;
  background: black;
  color: white;
  border: none;
  border-radius: 30px;
  font-size: 15px;
  cursor: pointer;
}

.checkout-btn:disabled {
  background: #999;
  cursor: not-allowed;
}
.footer-spacer {
  height: 100px;
}

.empty-cart {
  text-align: center;
  margin-top: 80px;
  color: #666;
}
</style>
</head>

<body>

<%- include('../partials/user/loggedinHeader') %>

<div class="container">

  <div class="cart-title">My Cart</div>

  <% if (!cart || !cart.items || cart.items.length === 0) { %>

    <div class="empty-cart">
      <h3>Your cart is empty</h3>
      <p>Looks like you haven’t added anything yet.</p>
      <button class="btn-continue" onclick="window.location.href='/products'">Continue Shopping</button>
    </div>

  <% } else { %>

  <table class="cart-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% 
      let hasOutOfStock = false;
      let grandTotal = 0;
    %>

    <% cart.items.forEach(item => { 
         const isOut = item.stock <= 0;
         if (isOut) hasOutOfStock = true;
         if (!isOut) grandTotal += item.totalPrice;
    %>

      <tr class="<%= isOut ? 'out-of-stock' : '' %>">
        <td>
          <div class="cart-product">
            <img src="/uploads/products/<%= item.productImage %>">
            <div>
              <h4><%= item.productName %></h4>

              <select onchange="changeSize('<%= item._id %>', this.value)">
  <% item.variants.forEach(v => { %>
    <option 
      value="<%= v._id %>"
      <%= v.size === item.size ? 'selected' : '' %>
      <%= v.stock <= 0 ? 'disabled' : '' %>>
      <%= v.size %><%= v.stock <= 0 ? ' (Out of stock)' : '' %>
    </option>
  <% }) %>
</select>

              <p>Color: <%= item.color || '-' %></p>

              <% if (isOut) { %>
                <div class="stock-warning">Out of stock</div>
              <% } %>
            </div>
          </div>
        </td>

        <td>
          <div class="qty-wrap">
            <button class="qty-btn"
              onclick="updateQty('<%= item._id %>', -1)"
              <%= item.quantity <= 1 || isOut ? 'disabled' : '' %>>
              −
            </button>

            <div class="qty-count"><%= item.quantity %></div>

            <button class="qty-btn"
              onclick="updateQty('<%= item._id %>', 1)"
              <%= isOut || item.quantity >= item.maxQty ? 'disabled' : '' %>>
              +
            </button>
           <div class="stock-warning" id="stock-msg-<%= item._id %>" style="display:none">
              No more stock left
           </div>


          </div>
        </td>

<td class="price">
  <% if (item.basePrice > item.price) { %>
    <div style="font-size:12px;color:#888;text-decoration:line-through">
      Rs. <%= item.basePrice * item.quantity %>
    </div>
  <% } %>
  <strong>Rs. <%= item.totalPrice %></strong>
</td>


        <td>
          <button class="remove-btn"
            onclick="removeItem('<%= item._id %>')">
            Remove
          </button>
        </td>
      </tr>

    <% }) %>
    </tbody>
  </table>

  <div class="cart-summary">
    <div class="summary-box">
<%
let baseTotal = 0;
let finalTotal = 0;

cart.items.forEach(i => {
  baseTotal += i.basePrice * i.quantity;
  finalTotal += i.totalPrice;
});

let discountPct = baseTotal
  ? Math.round(((baseTotal - finalTotal) / baseTotal) * 100)
  : 0;
%>

<div class="summary-row">
  <span>MRP Total</span>
  <span>Rs. <%= baseTotal %></span>
</div>

<div class="summary-row">
  <span>Discount</span>
  <span>-<%= discountPct %>%</span>
</div>

<div class="summary-row">
  <strong>Payable</strong>
  <strong>Rs. <%= finalTotal %></strong>
</div>


      <button class="checkout-btn"
        <%= hasOutOfStock ? 'disabled' : '' %>
        onclick="proceedCheckout()">
        Proceed to Checkout
      </button>

      <% if (hasOutOfStock) { %>
        <p style="font-size:12px;color:#c00;margin-top:8px;">
          Remove out-of-stock items to continue.
        </p>
      <% } %>
    </div>
  </div>

  <% } %>
</div>
<div class="footer-spacer"></div>

<%- include('../partials/user/footer') %>
<script>
function updateQty(itemId, delta) {
  fetch('/cart/update', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ itemId, delta })
  })
  .then(res => res.json())
  .then(data => {
    if (!data.success) {
      const el = document.getElementById('stock-msg-' + itemId);
      el.style.display = 'block';
      setTimeout(() => el.style.display = 'none', 1000);
    } else {
      location.reload();
    }
  });
}


function removeItem(itemId) {
  if (!confirm('Remove this item from cart?')) return;

  fetch('/cart/remove', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ itemId })
  }).then(() => location.reload());
}

function proceedCheckout() {
  window.location.href = '/checkout';
}
function changeSize(itemId, variantId) {
  fetch('/cart/change-size', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ itemId, variantId })
  })
  .then(res => res.json())
  .then(data => {
    if (!data.success) {
      alert(data.message);
    } else {
      location.reload();
    }
  });
}

</script>


</body>
</html>
