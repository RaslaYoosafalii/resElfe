<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Your Cart</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<style>

.container {
  max-width: 1200px;
  margin: 40px auto;
  padding: 0 20px;
  padding-bottom: 52px;
}
 /* Navbar */
      * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Arial', sans-serif;
    }

    body {
      color: #615A5A;
      background: #fff;
    }

     /* Navbar */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 60px;
      background: #fff;

    }

    .navbar .logo {
      font-size: 40px;
      font-weight: 37;
      color: #B2A9A1;
    }

    .navbar ul {
      display: flex;
      list-style: none;
      gap: 25px;
      
    }

    .navbar a {
      text-decoration: none;
      color: #615A5A;
      font-size: 15px;
      
    }

    .navbar .btn {
      padding: 8px 15px;
      border-radius: 5px;
      background: #484848;
      color: #fff;
    }

    

    
.page-head{
  text-align:center;
  margin-bottom:20px;
  color: black;
}
.page-head h2{
  margin:0;
  font-size:28px;
  letter-spacing:1px;
  font-weight:700;
}

.btn-continue {
  padding: 12px 22px;
  background: rgb(45, 42, 42);
  color: white;
  border: none;
  margin-top: 45px;
  border-radius: 20px;
  font-size: medium;
  cursor: pointer;
}

/* CART TABLE */
.cart-table {
  width: 100%;
  border-collapse: collapse;
}

.cart-table th {
  text-align: left;
  padding: 12px;
  background: #f5f5f5;
  font-size: 14px;
}

.cart-table td {
  padding: 18px 12px;
  border-bottom: 1px solid #eee;
  vertical-align: middle;
}

.cart-product {
  display: flex;
  gap: 15px;
  align-items: center;
}

.cart-product img {
  width: 90px;
  height: 110px;
  object-fit: cover;
  border-radius: 6px;
}

.cart-product h4 {
  margin: 0 0 6px;
  font-size: 15px;
}

.cart-product p {
  margin: 2px 0;
  font-size: 13px;
  color: #666;
}

/* QUANTITY */
.qty-wrap {
  display: flex;
  align-items: center;
  gap: 10px;
}

.qty-btn {
  width: 32px;
  height: 32px;
  border: 1px solid #ccc;
  background: #fff;
  cursor: pointer;
  font-size: 18px;
}

.qty-btn:disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.qty-count {
  min-width: 24px;
  text-align: center;
}

/* PRICE */
.price {
  font-weight: bold;
}

/* REMOVE */
.remove-btn {
  background: none;
  border: none;
  color: #c00;
  cursor: pointer;
  font-size: 13px;
}

/* OUT OF STOCK */
.out-of-stock {
  opacity: 0.45;
}

.stock-warning {
  font-size: 12px;
  color: #c00;
  margin-top: 4px;
}

/* SUMMARY */
.cart-summary {
  margin-top: 40px;
  display: flex;
  justify-content: flex-end;
}

.summary-box {
  width: 320px;
  border: 1px solid #ddd;
  padding: 20px;
  border-radius: 8px;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}

.checkout-btn {
  margin-top: 15px;
  width: 100%;
  padding: 14px;
  background: black;
  color: white;
  border: none;
  border-radius: 30px;
  font-size: 15px;
  cursor: pointer;
}

.checkout-btn:disabled {
  background: #999;
  cursor: not-allowed;
}



.empty-cart {
  text-align: center;
  margin-top: 100px;
  margin-bottom: 113px;
  color: #666;
}
.qty-btn.fake-disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

</style>
</head>

<body>

<%- include('../partials/user/loggedinHeader') %>

<div class="container">


  <div class="page-head">
    <h2>MY CART</h2>
  </div>

  <% if (!cart || !cart.items || cart.items.length === 0) { %>

    <div class="empty-cart">
      <h3 style="font-size: 100px; color: #958989; opacity: 50%;">Your cart is empty</h3>
      <p style="font-size: medium; margin-top: 9px;">Looks like you haven’t added anything yet.</p>
      <button class="btn-continue" onclick="window.location.href='/products'">
        Continue Shopping
      </button>
    </div>

  <% } else { %>

  <% 
      let hasOutOfStock = false;
      let hasUnavailable = false; 
      let grandTotal = 0;
    %>
  <table class="cart-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>

    <tbody>

    <% cart.items.forEach(item => { 
         const isOut = item.stock <= 0;
         const isUnavailable = item.isUnavailable;

         if (isOut) hasOutOfStock = true;
          if (isUnavailable) hasUnavailable = true; 
         if (!isOut && !isUnavailable) grandTotal += item.totalPrice;
    %>

     <tr class="<%= (isOut || isUnavailable) ? 'out-of-stock' : '' %>">
        <td>
          <div class="cart-product">
            <img src="/uploads/products/<%= item.productImage %>">
            <div>
              <h4><%= item.productName %></h4>

            <select
             onchange="changeSize('<%= item._id %>', this.value)"
            <%= isUnavailable ? 'disabled' : '' %>>

                <% item.variants.forEach(v => { %>
                  <option 
                    value="<%= v._id %>"
                    <%= v.size === item.size ? 'selected' : '' %>
                    <%= v.stock <= 0 ? 'disabled' : '' %>>
                    <%= v.size %><%= v.stock <= 0 ? ' (Out of stock)' : '' %>
                  </option>
                <% }) %>
              </select>

              <p>Color: <%= item.color || '-' %></p>

             <% if (isUnavailable) { %>
  <div class="stock-warning">Product no longer available</div>
<% } else if (isOut) { %>
  <div class="stock-warning">Out of stock</div>
<% } %>

            </div>
          </div>
        </td>

        <td>
           <div style="display:flex;flex-direction:column; align-items:flex-start;"></div>
          <div class="qty-wrap">
            <button class="qty-btn"
              onclick="updateQty('<%= item._id %>', -1)"
            <%= item.quantity <= 1 || isOut ? 'disabled' : '' %>>
              −
            </button>

            <div class="qty-count"><%= item.quantity %></div>

 <button
  class="qty-btn <%= (item.quantity >= item.stock) ? 'fake-disabled' : '' %>"
  onclick="updateQty('<%= item._id %>', 1)">
  +
</button>


             </div>
            <div class="stock-warning" id="stock-msg-<%= item._id %>" style="display:none; padding-left: 6px;">
              No more stock left
            </div>
          </div>
        </td>

        <td class="price">
          <% if (item.basePrice > item.price) { %>
            <div style="font-size:12px;color:#888;text-decoration:line-through">
              Rs. <%= item.basePrice * item.quantity %>
            </div>
          <% } %>
          <strong>Rs. <%= item.totalPrice %></strong>
        </td>

        <td>
       <button onclick="removeCartItem('<%= item._id %>', '<%= item.productId._id %>', <%= item.isUnavailable ? 'true' : 'false' %>)">
            Remove
          </button>
        </td>
      </tr>

    <% }) %>
    </tbody>
  </table>
    <% if (hasUnavailable) { %>
  <p style="font-size:12px;color:#c00;margin-top:8px;">
    Remove unavailable items to continue.
  </p>
<% } %>

  <div class="cart-summary">
    <div class="summary-box">
      <%
      let baseTotal = 0;
      let finalTotal = 0;

      cart.items.forEach(i => {
        baseTotal += i.basePrice * i.quantity;
        finalTotal += i.totalPrice;
      });

      let discount = baseTotal
        ? Math.round((baseTotal - finalTotal))
        : 0;
      %>

      <div class="summary-row">
        <span>MRP Total</span>
        <span>Rs. <%= baseTotal %></span>
      </div>

      <div class="summary-row">
        <span>Discount</span>
        <span>- Rs. <%= discount %></span>
      </div>

      <div class="summary-row">
        <strong>Payable</strong>
        <strong>Rs. <%= finalTotal %></strong>
      </div>

 <button class="checkout-btn"
  <%= (hasOutOfStock || hasUnavailable) ? 'disabled' : '' %>
  onclick="proceedCheckout()">
        Proceed to Checkout
      </button>

      <% if (hasOutOfStock) { %>
        <p style="font-size:12px;color:#c00;margin-top:8px;">
          Remove out-of-stock items to continue.
        </p>
      <% } %>
    </div>
  </div>
  
<% } %>

</div>

<div class="footer-spacer"></div>

<%- include('../partials/user/footer') %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function updateQty(itemId, delta) {
  fetch('/cart/update', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ itemId, delta })
  })
  .then(res => res.json())
  .then(data => {
    if (!data.success) {
      const el = document.getElementById('stock-msg-' + itemId);
      el.style.display = 'block';
      setTimeout(() => el.style.display = 'none', 1000);
    } else {
      location.reload();
    }
  });
}

function removeCartItem(itemId, productId, isUnavailable) {

//incase of unavailable
  if (isUnavailable) {
    Swal.fire({
      title: 'Remove item?',
      text: 'This item is no longer available.',
      confirmButtonText: 'Remove',
      showCancelButton: false
    }).then(() => {
      fetch('/cart/remove', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ itemId })
      }).then(() => location.reload());
    });
    return;
  }

//normal case
  Swal.fire({
    title: 'Remove item?',
    text: 'Move this item to wishlist?',
    showCancelButton: true,
    confirmButtonText: 'Move to Wishlist',
    cancelButtonText: 'Just Remove'
  }).then(result => {

    if (result.isConfirmed) {
      fetch('/wishlist/add', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ productId })
      });
    }

    fetch('/cart/remove', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ itemId })
    })
    .then(() => location.reload());
  });
}

function proceedCheckout() {
  window.location.href = '/checkout';
}

function changeSize(itemId, variantId) {
  fetch('/cart/change-size', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ itemId, variantId })
  })
  .then(res => res.json())
  .then(data => {
    if (!data.success) {
      alert(data.message);
      return;
    }
    if (data.qtyAdjusted && data.message) {
      const msgEl = document.getElementById('stock-msg-' + itemId);

      msgEl.textContent = data.message;
      msgEl.style.display = 'block';
      msgEl.style.color = '#c00';

      setTimeout(() => {
        location.reload();
      }, 1500);

    } else {
      location.reload();
    }
  });
}
</script>

</body>
</html>
