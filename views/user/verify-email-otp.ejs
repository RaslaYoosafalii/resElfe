<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify Email</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}

body {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: #fff;
}

.card {
  width: 480px;
  background: #fff;
  padding: 2.5rem;
  border-radius: 20px;
  box-shadow: 0 8px 25px rgba(0,0,0,0.08);
  text-align: center;
}

.card h2 {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 12px;
  color: #222;
}

.card p {
  font-size: 14px;
  color: #555;
  margin-bottom: 20px;
}

.otp-inputs {
  display: flex;
  justify-content: center;
  gap: 12px;
  margin-bottom: 15px;
}

.otp-inputs input {
  width: 50px;
  height: 50px;
  text-align: center;
  font-size: 18px;
  border: 1px solid #ddd;
  border-radius: 8px;
  outline: none;
  transition: border 0.3s;
}

.otp-inputs input:focus {
  border-color: #5a4a42;
}

.confirm-btn {
  width: 350px;
  padding: 14px;
  border: none;
  border-radius: 12px;
  background: #5a4a42;
  color: white;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s;
}

.confirm-btn:hover {
  background: #463730;
}

.back-link {
  display: inline-block;
  margin-top: 20px;
  font-size: 14px;
  color: #555;
  text-decoration: none;
}

.back-link:hover {
  text-decoration: underline;
}

.error-message {
  color: red;
  font-size: 13px;
  margin-bottom: 10px;
}
  </style>
</head>

<body>

  <div class="card">
    <h2>Verify Email</h2>
    <p>Please enter the OTP sent to your email</p>

    <% if (typeof message !== 'undefined' && message) { %>
      <div class="error-message"><%= message %></div>
    <% } %>

    <form id="otpForm" method="POST" action="/profile/verify-email-otp" onsubmit="return combineOtp()">
      
      <div class="otp-inputs">
        <input type="text" maxlength="1" required pattern="[0-9]">
        <input type="text" maxlength="1" required pattern="[0-9]">
        <input type="text" maxlength="1" required pattern="[0-9]">
        <input type="text" maxlength="1" required pattern="[0-9]">
      </div>

      <!-- Hidden field to send combined OTP -->
      <input type="hidden" name="otp" id="finalOtp">

      <button type="submit" class="confirm-btn">Confirm</button>
    </form>

    <a href="/profile/edit" class="back-link">Go back to Edit Profile</a>
  </div>

<script>
const inputs = document.querySelectorAll('.otp-inputs input');

// auto move forward
inputs.forEach((input, index) => {
  input.addEventListener('input', function() {
    this.value = this.value.replace(/[^0-9]/g, '');
    if (this.value.length === 1 && index < inputs.length - 1) {
      inputs[index + 1].focus();
    }
  });

  input.addEventListener('keydown', function(e) {
    if (e.key === 'Backspace' && !this.value && index > 0) {
      inputs[index - 1].focus();
    }
  });
});

// combine OTP before submit
function combineOtp() {
  const otp = Array.from(inputs).map(input => input.value).join('');

  if (otp.length !== 4 || !/^[0-9]{4}$/.test(otp)) {
    Swal.fire({
      icon: "error",
      title: "Invalid OTP",
      text: "Please enter a valid 4-digit OTP"
    });
    return false;
  }

  document.getElementById('finalOtp').value = otp;
  return true;
}
</script>

<% if (typeof otpSent !== 'undefined' && otpSent) { %>
<script>
  Swal.fire({
    icon: 'success',
    title: 'OTP Sent',
    text: 'Email verification OTP sent successfully',
    confirmButtonColor: '#4a4745'
  });
</script>
<% } %>

<% if (typeof emailVerified !== 'undefined' && emailVerified) { %>
<script>
  const fields = <%- JSON.stringify(updatedFields || []) %>;

  let text = '';
  if (fields.length === 1) {
    text = `${fields[0]} updated successfully`;
  } else if (fields.length === 2) {
    text = `${fields[0]} and ${fields[1]} updated successfully`;
  } else if (fields.length === 3) {
    text = `${fields.join(', ')} updated successfully`;
  }

  Swal.fire({
    icon: 'success',
    title: 'Profile Updated',
    text,
    confirmButtonColor: '#4a4745'
  }).then(() => {
    window.location.href = '/profile';
  });
</script>
<% } %>

</body>
</html>
